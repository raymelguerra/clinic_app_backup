<MudPaper Class="pa-4 ma-2" Elevation="3">
    <MudGrid Spacing="0" Justify="Justify.SpaceBetween">
        <MudItem>
            <MudGrid Spacing="1">
                <MudItem>
                    <MudIcon Icon="@Icon" Size="Size.Large" Color="Color.Inherit" />
                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.h5" Align="Align.Left">@Title</MudText>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem>
            <MudGrid Spacing="0">
                <MudItem xs="6" sm="6" xl="6">
                    <MudTooltip Text="@Concat(0)">
                        <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium" hidden="@HiddenAddButton" OnClick="@(() => AddButtonAction.Invoke())" />
                    </MudTooltip>
                </MudItem>
                <MudItem xs="6" sm="6" xl="6">
                    <MudTooltip Text="@Concat(1)">
                        <MudFab Color="Color.Dark" StartIcon="@Icons.Material.Filled.Download" Size="Size.Small" hidden="@HiddenDownloadButton" OnClick="@(() => DownloadButtonAction.Invoke())" />
                    </MudTooltip>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudPaper Class="pa-4 ma-1" Elevation="1">
    @ChildContent
</MudPaper>
