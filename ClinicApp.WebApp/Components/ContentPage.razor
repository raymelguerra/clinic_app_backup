<MudPaper Class="pa-4 ma-1" Elevation="3">
    <MudGrid Spacing="0" Justify="Justify.SpaceBetween">
        <MudItem>
            <MudGrid Spacing="1">
                <MudItem>
                    <MudIcon Icon="@Icon" Size="Size.Large" Color="Color.Inherit" />
                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.h5" Align="Align.Left">@Title</MudText>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem>
            <MudGrid Spacing="1">
                <MudItem>
                    <MudTooltip Text="@($"Add {Title}")">
                        <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" hidden="@HiddenAddButton" OnClick="@(() => AddButtonAction.Invoke())" />
                    </MudTooltip>
                </MudItem>
                <MudItem>
                    <MudTooltip Text="@($"Download {Title}")">
                        <MudIconButton Color="Color.Dark" Variant="Variant.Outlined" Icon="@Icons.Material.Filled.Download" Size="Size.Small" hidden="@HiddenDownloadButton" OnClick="@(() => DownloadButtonAction.Invoke())" />
                    </MudTooltip>
                </MudItem>
                <MudItem>
                    <MudTooltip Text="@("Go Back")">
                        <MudIconButton Color="Color.Secondary" Variant="Variant.Outlined" Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" hidden="@HiddenGoBackButton" OnClick="@(() => GoBackButtonAction.Invoke())" />
                    </MudTooltip>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudPaper Class="pa-4 ma-1" Elevation="1">
    @ChildContent
</MudPaper>
