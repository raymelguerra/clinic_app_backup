@using ClinicApp.Core.Models

<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@form" Validation="@(periodValidator.ValidateValue)" ValidationDelay="0">
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField @bind-Value="Model.PayPeriod"
                                  For="@(() => Model.PayPeriod)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Pay Period" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.StartDate"
                                   For="@(() => Model.StartDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="Start Date" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.EndDate"
                                   For="@(() => Model.EndDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="End Date" />
                </MudItem>
               
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.DocumentDeliveryDate"
                                   For="@(() => Model.DocumentDeliveryDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="Document Delivery Date" />
                </MudItem>
                
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.PaymentDate"
                                   For="@(() => Model.PaymentDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="Payment Date" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudGrid Spacing="1" Justify="Justify.FlexEnd">
            <MudItem>
                <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
                <MudButton OnClick="Cancel">Cancel</MudButton>
            </MudItem>
        </MudGrid>
    </DialogActions>
</MudDialog>
