@using ClinicApp.Core.Models

<MudDialog>
    <DialogContent>
        <MudForm @ref="@form" ValidationDelay="0">
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="12" xl="12">
                    <MudTextField T="string" HelperText="Choose a strong password" @ref="pwField"
                                  InputType="InputType.Password" Label="New Password" Immediate="true"
                                  Variant="Variant.Outlined"
                                  Validation="@(new Func<string, IEnumerable<string>>(PasswordStrength))" Required="true"
                                  RequiredError="Password is required!" />
                </MudItem>  
                <MudItem xs="12" sm="12" xl="12">
                    <MudTextField T="string"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  elperText="Repeat the password" InputType="InputType.Password"
                                  Validation="@(new Func<string, string>(PasswordMatch))"
                                  Label="Confirm Password" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudGrid Spacing="1" Justify="Justify.FlexEnd">
            <MudItem>
                <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
                <MudButton OnClick="Cancel">Cancel</MudButton>
            </MudItem>
        </MudGrid>
    </DialogActions>
</MudDialog>
