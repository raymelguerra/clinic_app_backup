<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@form" Validation="@(paValidator.ValidateValue)" ValidationDelay="0">
            <MudGrid Spacing="1">
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField @bind-Value="Model.LicenseNumber"
                                  For="@(() => Model.LicenseNumber)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="License Number" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.CreateDate"
                                   For="@(() => Model.CreateDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="Date Created" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePicker @bind-Date="Model.ExpireDate"
                                   For="@(() => Model.ExpireDate)"
                                   Immediate="true"
                                   Variant="Variant.Outlined"
                                   Label="Expiry Date" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField @bind-Value="Model.Auxiliar"
                                  For="@(() => Model.Auxiliar)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Auxiliar License Number" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Edit">Save</MudButton>
        <MudButton OnClick="Cancel"> Cancel</MudButton>
    </DialogActions>
</MudDialog>