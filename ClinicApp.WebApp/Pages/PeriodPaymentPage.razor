@page "/periodpayment"
@using ClinicApp.Core.Models

<PageTitle>Period and payments</PageTitle>

<ClinicApp.WebApp.Components.ContentPage Title="Periods and Payments"
                                         Icon="@Icons.Material.Outlined.CalendarMonth"
                                         HiddenAddButton="true"
                                         HiddenDownloadButton="true">

    <MudDataGrid Items="@Periods" FixedHeader="true" Filterable="true" FilterMode="DataGridFilterMode.ColumnFilterMenu" FilterCaseSensitivity="DataGridFilterCaseSensitivity.CaseInsensitive">
        <Columns>
            <PropertyColumn Property="x => x.PayPeriod" Title="Pay Period" />
            <PropertyColumn Property="@(x => $"{(x.StartDate.HasValue ? x.StartDate.Value.ToString("MM-dd-yyyy") : string.Empty )} - {(x.EndDate.HasValue ? x.EndDate.Value.ToString("MM-dd-yyyy") : string.Empty )}")" Title="Period" />
            <PropertyColumn Property="@(x => x.DocumentDeliveryDate.HasValue ? x.DocumentDeliveryDate.Value.ToString("MM-dd-yyyy") : string.Empty)" Title="Document Delivery" />
            <PropertyColumn Property="@(x => x.PaymentDate.HasValue ? x.PaymentDate.Value.ToString("MM-dd-yyyy") : string.Empty)" Title="Payment" />
            <TemplateColumn Title="Actions" Context="data" Filterable="false" Sortable="false">
                <CellTemplate>
                    <MudGrid Spacing="1" Justify="Justify.FlexEnd">
                        <MudItem>
                            <MudIconButton Title="Show details" Size="@Size.Small" Icon="@Icons.Material.Outlined.RemoveRedEye" Class="pa-0" Color="Color.Info" OnClick="(args) => ShowPeriodDetails(data.Item.Id)" />
                        </MudItem>
                        <MudItem>
                            <MudIconButton Title="Generate and download summary" Size="@Size.Small" Icon="@Icons.Custom.FileFormats.FileExcel" Color="Color.Success" Class="pa-0" />
                        </MudItem>
                    </MudGrid>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Period" />
        </PagerContent>
    </MudDataGrid>

</ClinicApp.WebApp.Components.ContentPage>