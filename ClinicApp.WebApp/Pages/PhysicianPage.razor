@page "/physician"
@using ClinicApp.Core.Models
@attribute [Authorize]

<PageTitle>Physician</PageTitle>

<ClinicApp.WebApp.Components.ContentPage Title="Physician"
                                         Icon="@Icons.Material.Filled.MedicalServices"
                                         HiddenAddButton="false"
                                         HiddenDownloadButton="true" AddButtonAction="AddPhysician">

    <MudDataGrid Loading="@_loading" Items="@Contractors" FixedHeader="true" Filterable="true" FilterMode="DataGridFilterMode.ColumnFilterMenu" FilterCaseSensitivity="DataGridFilterCaseSensitivity.CaseInsensitive">
        <Columns>
            <PropertyColumn Property="x => x.Name" Title="Name" />
            <PropertyColumn Property="x => x.RenderingProvider" Title="RenderingProvider" />
            <PropertyColumn Property="x => x.Extra" Filterable="false" />
            <TemplateColumn Title="Actions" Context="data" Filterable="false" Sortable="false">
                <CellTemplate>
                    <MudGrid Spacing="1" Justify="Justify.FlexEnd">
                        <MudItem sm="6" md="6" lg="6">
                            <MudIconButton Title="Edit" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Class="pa-0" Color="Color.Info" OnClick="@((args) => EditClient(data.Item.Id))" />
                        </MudItem>
                        <MudItem sm="6" md="6" lg="6">
                            <MudIconButton Title="Delete" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" Class="pa-0" OnClick="@((args) => RemovePhysician(data.Item.Id))" />
                        </MudItem>
                    </MudGrid>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Contractor" />
        </PagerContent>
    </MudDataGrid>

</ClinicApp.WebApp.Components.ContentPage>